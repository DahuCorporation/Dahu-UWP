    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Background/montagne Dahu1.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid Margin="0,80" Background="#F22F2F2F" Width="1000">
            <StackPanel >
                <DesktopDahuComponent:Dahu_InputText HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0"/>
                <DesktopDahuComponent:Dahu_Button  HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0"/>
                <Grid>
                    <DesktopDahuComponent:Dahu_Button x:Name="ConnectButton"></DesktopDahuComponent:Dahu_Button>
                </Grid>
                
            </StackPanel>
        </Grid>


    </Grid>
</Page>
